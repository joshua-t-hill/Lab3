<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="CS341Lab3.EditAirportPopup">

    <VerticalStackLayout>
        
        <Entry Grid.Column="0" Placeholder="City" x:Name="CityENT"/>
        <Entry Grid.Column="1" Placeholder="Date Visited" x:Name="DateENT"/>
        <Entry Grid.Column="2" Placeholder="Rating" x:Name="RatingENT"/>
        
        <HorizontalStackLayout Margin="20" Spacing="6">
            
            <Button x:Name="btnCancel"
                    Text="Cancel"
                    Clicked="BtnCancel_Clicked"/>
            <Button x:Name="btnCommit"
                    Text="Commit Changes"
                    Clicked="BtnCommit_Clicked"/>
                
        </HorizontalStackLayout>

    </VerticalStackLayout>
</toolkit:Popup>